    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="">
    <title>Edit User</title>
</head>

<body>

    <h1>Edit User</h1>
    <form action="/edit/<%= user.id %>" method="post">
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" value="<%= user.name %>" required><br>

        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" value="<%= user.surname %>" required><br>

        <label for="dob">Date of Birth:</label>
        <input type="date" id="dob" name="dob" value="<%= user.dob %>" required><br>

        <button type="submit" href="/submit">Save Changes</button>
    </form>
    <!-- <a href="/submit">Cancel</a> -->
</body>

</html>
